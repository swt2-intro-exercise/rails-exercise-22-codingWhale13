<h1>New Author</h1>

<%= form_with scope: :author, local: true, url: authors_path do |form| %>
  <p>
    <%= form.label :first_name %><br>
    <%= form.text_field :first_name %>
  </p>
 
  <p>
    <%= form.label :last_name %><br>
    <%= form.text_area :last_name %>
  </p>

  <p>
    <%= form.label :homepage %><br>
    <%= form.text_area :homepage %>
  </p>
 
  <p>
    <%= form.submit :Save %>
  </p>
<% end %>